<br><br><br>
<div class= "container">
  <center>
    <%- model_class = App -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
  </center>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:price) %></th>
      </tr>
    </thead>
    <tbody>
      <% @apps.each do |app| %>
        <tr> 
         <td><%= app.name %></td>
         <td><%= app.days %></td>
          <td><h5 class="text-right"> Price: <span style="color: green"><%= number_to_currency app.price %></span></h5></td>
          <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        app_path(app), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_app_path(app), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        app_path(app),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <center>
    <%= link_to 'NEW APP', new_app_path, class: 'btn btn-primary' %>
  </center>
</div>
<br>