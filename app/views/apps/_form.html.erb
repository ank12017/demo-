<br><br><br>
<div class= "container"> 

  <%= form_for @app, :html => { :class => "form-horizontal app" } do |f| %>

    <% if @app.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @app.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-4">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :days, :class => 'control-label col-lg-2' %>
      <div class="col-lg-4">
        <%= f.text_field :days, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :price, :class => 'control-label col-lg-2' %>
      <div class="col-lg-4">
        <%= f.text_field :price, :class => 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  apps_path, :class => 'btn btn-default' %>
      </div>
    </div>

  <% end %>
 
</div>